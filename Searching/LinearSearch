package Searching;

/*Linear search is just normally searching by comparing each and every element with every element */
public class LinearSearch {
    public static void main(String[] args) {
        int n = 12;
        int flag = 0;
        int[] arr = { 1, 2, 3, 4, 5, 6 };
        for (int i = 0; i < arr.length; i++) {
            if (n == arr[i]) {
                System.out.println("Found the Element");
                flag++;
                break;
            }
        }
        if (flag == 0) {
            System.out.println("Element not found");
        }

    }
}
